# WhatsApp Medical Report Vault - Environment Variables
# Copy this file to .env and fill in your values

# ==================== Application ====================
ENVIRONMENT=development  # development, staging, production
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=true

# ==================== WhatsApp Configuration ====================
WHATSAPP_PROVIDER=meta  # meta, twilio, or 360dialog
WHATSAPP_API_TOKEN=your_whatsapp_api_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here
WHATSAPP_API_VERSION=v18.0

# Meta Cloud API
META_API_URL=https://graph.facebook.com

# Twilio (if using Twilio)
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# 360dialog (if using 360dialog)
# DIALOG_360_API_KEY=your_api_key
# DIALOG_360_CLIENT_ID=your_client_id

# ==================== Database ====================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/whatsapp_vault
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_ECHO=false  # Set to true for SQL query logging

# ==================== Redis ====================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# ==================== Celery ====================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=300
CELERY_WORKER_PREFETCH_MULTIPLIER=4

# ==================== Storage ====================
STORAGE_PROVIDER=s3  # s3 or spaces

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1

# DigitalOcean Spaces (alternative to S3)
# SPACES_ACCESS_KEY_ID=your_spaces_key
# SPACES_SECRET_ACCESS_KEY=your_spaces_secret
# SPACES_BUCKET=your-bucket-name
# SPACES_REGION=nyc3
# SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# Storage Configuration
MAX_FILE_SIZE_MB=16
ALLOWED_IMAGE_TYPES=image/jpeg,image/png
ALLOWED_DOCUMENT_TYPES=application/pdf
SIGNED_URL_EXPIRY_SECONDS=3600

# ==================== Security ====================
ENCRYPTION_KEY=your-encryption-key-32-chars-min
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Password Hashing
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==================== Session Management ====================
SESSION_TIMEOUT_MINUTES=30
SESSION_REMINDER_MINUTES=25
SESSION_CLEANUP_INTERVAL_MINUTES=5

# ==================== Virus Scanning (Optional) ====================
ENABLE_VIRUS_SCAN=false
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
VIRUSTOTAL_API_KEY=your_virustotal_api_key

# ==================== Monitoring ====================
# Sentry
SENTRY_DSN=your_sentry_dsn_here
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=development

# Prometheus
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
LOG_FILE=/var/log/whatsapp-vault/app.log

# ==================== Analytics (Optional) ====================
ENABLE_ANALYTICS=false
ANALYTICS_RETENTION_DAYS=90

# ==================== API Configuration ====================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true  # Set to false in production

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ==================== Webhook Configuration ====================
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_SECONDS=5

# ==================== Feature Flags ====================
FEATURE_OCR_ENABLED=false
FEATURE_AI_SUMMARIZATION=false
FEATURE_WEB_DASHBOARD=false
FEATURE_FAMILY_ACCOUNTS=false

# ==================== Third-Party Integrations ====================
# OpenAI (for optional AI features)
# OPENAI_API_KEY=your_openai_api_key

# Tesseract OCR (for optional OCR)
# TESSERACT_PATH=/usr/bin/tesseract

# ==================== Development Tools ====================
# Swagger UI
ENABLE_SWAGGER=true
SWAGGER_URL=/docs

# ReDoc
ENABLE_REDOC=true
REDOC_URL=/redoc

# ==================== Production Settings ====================
# Uncomment and set these for production deployment

# SSL/TLS
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem

# Trusted Proxies (for load balancer)
# TRUSTED_PROXIES=10.0.0.0/8

# Health Check
HEALTH_CHECK_PATH=/health
